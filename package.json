{
	"name": "@piggly/fastify-chassis",
	"version": "0.1.0-beta.33",
	"description": "Utilities to build HTTP microservices with fastify.",
	"scripts": {
		"check": "tsc --noEmit",
		"clean": "rimraf dist",
		"build": "npm run clean && npm run build:esm && npm run build:cjs",
		"build:esm": "tsc -p tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
		"build:cjs": "tsc -p tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ext .ts --ignore-path .gitignore --fix src",
		"test": "cross-env NODE_ENV=test jest --coverage --watchAll",
		"test:once": "cross-env NODE_ENV=test jest",
		"test:debug": "cross-env NODE_ENV=test node --inspect ./node_modules/.bin/jest --runInBand",
		"preversion": "npm run build",
		"postversion": "git push --follow-tags",
		"prepublishOnly": "npm run format && npm run lint",
		"prepare": "npm run build"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"keywords": [
		"fastify",
		"microservices",
		"chassis",
		"utilities",
		"helpers"
	],
	"author": "caiquearaujo",
	"license": "MIT",
	"homepage": "https://github.com/caiquearaujo/fastify-chassis#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/caiquearaujo/fastify-chassis.git"
	},
	"bugs": {
		"url": "https://github.com/caiquearaujo/fastify-chassis/issues"
	},
	"devDependencies": {
		"@types/jest": "^29.2.5",
		"@types/module-alias": "^2.0.1",
		"@types/node": "^18.11.18",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"eslint": "^8.31.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-import-resolver-typescript": "^3.5.2",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"fastify": "^4.11.0",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"joi": "^17.8.3",
		"pino-pretty": "^10.0.0",
		"prettier": "^2.8.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.6",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4"
	},
	"peerDependencies": {
		"dotenv": ">=16",
		"fastify": ">=4.11",
		"joi": ">=17.8",
		"jose": "^4.14.4"
	},
	"dependencies": {
		"@piggly/event-bus": "^1.0.1",
		"moment-timezone": "^0.5.43",
		"pino": "^8.14.1",
		"shallow-equal-object": "^1.1.1",
		"uuid": "^9.0.0"
	}
}
