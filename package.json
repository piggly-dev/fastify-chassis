{
	"name": "@piggly/fastify-chassis",
	"version": "4.0.0",
	"description": "An ESM/CommonJS toolkit to help you to do common operations in your back-end applications with Fastify and NodeJS.",
	"scripts": {
		"check": "tsc --noEmit",
		"clean": "rimraf dist",
		"prebuild": "npm run lint && npm run format",
		"build": "npm run clean && npm run build:esm && npm run build:cjs",
		"build:esm": "tsc -p tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
		"build:cjs": "tsc -p tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ext .ts --ignore-path .gitignore --fix src",
		"test": "cross-env NODE_ENV=test jest --coverage --watchAll",
		"test:once": "cross-env NODE_ENV=test jest",
		"test:debug": "cross-env NODE_ENV=test node --inspect ./node_modules/.bin/jest --runInBand",
		"preversion": "npm run build",
		"postversion": "git push --follow-tags",
		"prepublishOnly": "npm run format && npm run lint",
		"prepare": "npm run build"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"keywords": [
		"fastify",
		"microservices",
		"chassis",
		"utilities",
		"helpers"
	],
	"author": "caiquearaujo",
	"license": "MIT",
	"homepage": "https://github.com/caiquearaujo/fastify-chassis#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/caiquearaujo/fastify-chassis.git"
	},
	"bugs": {
		"url": "https://github.com/caiquearaujo/fastify-chassis/issues"
	},
	"devDependencies": {
		"@fastify/rate-limit": "^9.1.0",
		"@piggly/ddd-toolkit": "^3.0.0",
		"@piggly/event-bus": "^2.1.0",
		"@types/jest": "^29.5.12",
		"@types/module-alias": "^2.0.4",
		"@types/node": "^18.19.34",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^4.2.1",
		"fastify": "4.26",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"joi": "^17.13.1",
		"jose": "^5.4.0",
		"prettier": "^2.8.8",
		"ts-jest": "^29.1.4",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0",
		"tslib": "^2.6.3",
		"typescript": "^5.4.5"
	},
	"peerDependencies": {
		"@piggly/ddd-toolkit": ">=3.0",
		"@piggly/event-bus": ">=2.1",
		"dotenv": ">=16.4",
		"fastify": ">=4.27",
		"joi": ">=17.8",
		"jose": ">=5.0"
	},
	"dependencies": {
		"crc": "^4.3.2",
		"moment-timezone": "^0.5.45",
		"pino": "^8.21.0",
		"pino-pretty": "^10.3.1",
		"shallow-equal-object": "^1.1.1",
		"uuid": "^9.0.1"
	}
}
